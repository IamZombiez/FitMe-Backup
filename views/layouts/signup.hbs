<form id="signup" name="signup" method="post" action="/signup">
    <ul>
        <label for="name">Full Name</label> <br>
            <input type="text" class="name" id="name" placeholder="Enter your full name here">
        <br>
        
        <form id="multiselectForm" method="post" class="form-horizontal">
        <label for="gender">Gender</label><br>
                <select class="gender" name="gender">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                </select>
        </form>
        <br>

        <label for="UserName">User Name</label><br>
        <input class="UserName" name="UserName" type="text" />
        <br>

        <label for="Password">Password</label><br>
        <input class="pw" name="Password" type="password" />
        <br>

        <label for="height">Height</label> <br>
        <input class="height" name="height" type="text" />
        <br>

        <label for="cWeight">Current Weight</label><br>
        <input class="cWeight" name="cWeight" type="text" />
        <br>

        <label for="gWeight">Goal Weight</label><br>
        <input class="gWeight" name="gWeight" type="text" />
        <br>

        <input class="btn" type="submit" value="Lets Get Started" id="signupSub" />
        <br>
     <ul>

    </form>




